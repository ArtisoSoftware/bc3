# mirobot.io - Use index.html as default
DirectoryIndex index.html

RewriteEngine On

# 1) Redirect www -> non-www (canonical)
RewriteCond %{HTTP_HOST} ^www\.mirobot\.io$ [NC]
RewriteRule ^ https://mirobot.io%{REQUEST_URI} [R=301,L]

# 2) Force HTTPS (for non-www)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} ^mirobot\.io$ [NC]
RewriteRule ^ https://mirobot.io%{REQUEST_URI} [R=301,L]

# 3) If request is NOT an existing file/dir => go to /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ / [L]
